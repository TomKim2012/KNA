<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:c="urn:import:com.wira.mms.client.application.ui.material.components"
	xmlns:s="urn:import:com.wira.mms.client.components.stories">
	<ui:style>
	.label {
		margin-left: 5%;
		margin-top: 5%
	}
	
	header, main, footer {
		padding-left: 300px;
	}
	
	.table {
		width: 100%;
	}
	
	.panelPager {
		display: inline-block;
	}
	
	.grid {
		padding: 10px;
	}
	
	.headerItems {
		padding: 20px 20px 0px 20px;
	}
	
	.headerItems i {
		opacity: 0.71;
		cursor: pointer;
	}
	</ui:style>
	<g:HTMLPanel>
		<m:MaterialNavBar wave="light" align="right" color="blue"
			text="My Tasks" sideBar="fixed" sideBarWidth="300">
			<m:nav>
				<m:MaterialLink icon="mdi-social-notifications"
					textColor="white" tooltip="Notification" />
			</m:nav>

			<!-- Sidebar -->
			<m:sidebaritem>
				<m:MaterialTopNav profileName="Tom Kimani"
					profileImageUrl="http://b.vimeocdn.com/ps/339/488/3394886_300.jpg"
					url="http://2.bp.blogspot.com/-x4D3EPELYRU/VMHu52a4qUI/AAAAAAAAHek/EmnIgqTtu_U/s0/fon116%2B2160x1920.png"
					ui:field="topNav" textColor="white" type="sidebar">
					<m:child>
						<m:MaterialLink text="kimani@wira.io" textColor="white"
							fontSize="0.8" icon="mdi-navigation-arrow-drop-down"
							iconPosition="right" />
					</m:child>
				</m:MaterialTopNav>
			</m:sidebaritem>
			<m:sidebaritem>
				<m:MaterialLink icon="mdi-social-whatshot"
					iconPosition="left" text="My NewsFeed" textColor="blue" />
			</m:sidebaritem>
			<m:sidebaritem>
				<m:MaterialLink icon="mdi-navigation-apps"
					iconPosition="left" text="My Tasks" textColor="blue" />
			</m:sidebaritem>
		</m:MaterialNavBar>




		<m:MaterialContainer>
			
			<m:MaterialLink text="Today" textColor="grey"
				addStyleNames="{style.label}" />
			<s:StoriesView></s:StoriesView>
			<!-- m:MaterialRow>
				<s:StoriesView></s:StoriesView>
			</m:MaterialRow-->

			<m:MaterialLink text="Today" textColor="grey"
				addStyleNames="{style.label}" />

			<m:MaterialCollapsible type="popout">
				<m:item>
					<m:MaterialCollapsibleItem>
						<m:header>
							<m:MaterialLink text="Travel" icon="mdi-maps-flight"
								textColor="purple" />
						</m:header>
						<m:content>
							<m:MaterialLabel
								text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat." />
						</m:content>
					</m:MaterialCollapsibleItem>
				</m:item>

				<m:item>
					<m:MaterialCollapsibleItem>
						<m:header>
							<m:MaterialLink text="Social"
								icon="mdi-social-people" textColor="red" />
						</m:header>
						<m:content>
							<m:MaterialPanel>
								<m:MaterialLabel
									text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat." />
							</m:MaterialPanel>
						</m:content>
					</m:MaterialCollapsibleItem>
				</m:item>
			</m:MaterialCollapsible>


		</m:MaterialContainer>

		<m:MaterialFloatingContainer>
			<m:initial>
				<m:MaterialButton type="floating" waves="light"
					size="large" color="red" icon="mdi-content-add" tooltip="Create"
					tooltipLocation="left" />
			</m:initial>
			<m:item>
				<m:MaterialButton type="floating" waves="light"
					color="purple" icon="mdi-communication-email" ui:field="aStory"
					tooltip="Create Story" tooltipLocation="left" />
			</m:item>
			<m:item>
				<m:MaterialButton type="floating" waves="light"
					color="blue" icon="mdi-image-palette" tooltip="CreateTask" ui:field="aTask"
					tooltipLocation="left" />
			</m:item>
		</m:MaterialFloatingContainer>

		<!-- <m:MaterialFooter color="blue" copyright="Â© 2015 KNA" -->
		<!-- type="fixed"> -->
		<!-- </m:MaterialFooter> -->

	</g:HTMLPanel>
</ui:UiBinder> 