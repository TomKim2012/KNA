<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:gwt.material.design.client.ui">


	<ui:style>
	.table {
		width: 100%;
	}
	
	.panelPager {
		display: inline-block;
	}
	
	.grid {
		padding: 10px;
	}
	
	.headerItems {
		padding: 20px 20px 0px 20px;
	}
	
	.headerItems i {
		opacity: 0.71;
		cursor: pointer;
	}
	</ui:style>

	<m:MaterialRow>
		<m:MaterialRow addStyleNames="card">
			<m:MaterialRow>
				<m:MaterialLabel text="Kisumu Branch News Desk"
					fontSize="1.5" addStyleNames="{style.headerItems} left" />
					
				<m:MaterialIcon tooltip="Action 1" color="black"
					icon="mdi-action-explore" size="small" addStyleNames="{style.headerItems} right" />
				<m:MaterialTextBox placeholder="Search" icon="mdi-action-search"
					addStyleNames="right" />
			</m:MaterialRow>

			<g:SimplePanel ui:field="gridPanel" />

			<g:SimplePanel ui:field="pagerPanel" addStyleNames="{style.panelPager}" />
		</m:MaterialRow>

	</m:MaterialRow>
</ui:UiBinder>